{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny":  false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "canisters/counter": [
        ".dfx/local/canisters/counter"
      ],
      "@/*": ["src/frontend/*"],
      "~/*": ["src/frontend/*"],
    }
  },
  "include": [
    "src/frontend/**/*.ts",
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.tsx",
    "src/frontend/**/*.vue"
  ]
}