{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "canisters/counter": [".dfx/local/canisters/counter"],
      "canisters/data_manager": [".dfx/local/canisters/data_manager"],
      "@/*": ["src/frontend/*"],
      "~/*": ["src/frontend/*"]
    }
  },
  "include": [
    "src/frontend/**/*.ts",
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.tsx",
    "src/frontend/**/*.vue"
  ]
}
